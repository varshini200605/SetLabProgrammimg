    <script>
    //Quantifiers specify how many times a character or group should appear
    let text="javascript";
    let pattern=/\a?/g;
    let result=text.match(pattern);
    console.log(result);

    //Modifiers(flags) change how  regex matches.
    //^->start of string(or line, if m)
    //$->end of string(or line, if m)
    let text2="Hai hello  How are you?\nHai I'm Fine.Hai";
    let pattern2=/^hai/ig;
    let result2=text2.match(pattern2);
    console.log(result2);
    
    
    //Meta characters have special meaning in regex.
    //Common meta characters:
    //.->any character except newline
    //.d->digit
    //.w->word
    //.s
    let number="24bcs0099"
    let pattern3=/\d+\w+/g;
    let result3=number.match(pattern3);
    console.log(result3);
    


    //Methods
    //test()->quick check:does the string contain the pattern?
    //exec()->gives detailed info about the first match(and captured groups)
    //match()->gives all matches in an array (if g flag is used)
    //replace()-> replaces matched parts with something new.
    //split()->breaks string into array 
    let text4="Hai kavikuyil";
    let pattern4=/(\w+)/g;
    let result4=text.match(pattern4);
    console.log(result);


    //example2
    let text5="Hai Kavikuyil";
    let pattern5=/(\w+)\s+(\w+)/;
    let result5=text.match(pattern5);
    concole.log(result5);
    console.log(result5[0]);
    console.log(result5[1]);
    console.log(result5[2]);
    </script>


